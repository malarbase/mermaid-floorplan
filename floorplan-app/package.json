{
  "name": "floorplan-app",
  "version": "0.1.0",
  "description": "SolidStart application for floorplan design with auth and cloud storage",
  "type": "module",
  "scripts": {
    "dev": "vinxi dev",
    "build": "vinxi build",
    "start": "vinxi start",
    "version": "vinxi version",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "convex:dev": "convex dev",
    "convex:deploy": "convex deploy",
    "convex:deploy:prod": "convex deploy --cmd 'npm run build'"
  },
  "dependencies": {
    "@convex-dev/better-auth": "^0.10.10",
    "@solidjs/meta": "^0.29.4",
    "@solidjs/router": "^0.15.0",
    "@solidjs/start": "^1.1.0",
    "better-auth": "^1.4.18",
    "convex": "^1.31.7",
    "convex-solidjs": "^0.0.3",
    "floorplan-viewer-core": "*",
    "solid-js": "^1.9.5",
    "vinxi": "^0.5.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.1",
    "@solidjs/testing-library": "^0.8.10",
    "@testing-library/dom": "^10.4.1",
    "happy-dom": "^20.4.0",
    "jsdom": "^27.4.0",
    "typescript": "~5.8.3",
    "vite-plugin-solid": "^2.11.10",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20"
  }
}
