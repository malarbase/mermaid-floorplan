{
  "name": "floorplans-mcp-server",
  "description": "MCP server for floorplan DSL rendering and manipulation",
  "version": "0.2.0",
  "type": "module",
  "engines": {
    "node": ">=20.10.0",
    "npm": ">=10.2.3"
  },
  "bin": {
    "floorplans-mcp": "./out/index.js"
  },
  "files": [
    "out"
  ],
  "main": "./out/index.js",
  "exports": {
    ".": {
      "types": "./out/index.d.ts",
      "default": "./out/index.js"
    },
    "./utils/renderer": {
      "types": "./out/utils/renderer.d.ts",
      "default": "./out/utils/renderer.js"
    },
    "./utils/renderer3d": {
      "types": "./out/utils/renderer3d.d.ts",
      "default": "./out/utils/renderer3d.js"
    }
  },
  "scripts": {
    "clean": "shx rm -fr *.tsbuildinfo out",
    "build": "tsc --p ./tsconfig.json",
    "build:clean": "npm run clean && npm run build",
    "start": "node out/index.js",
    "test": "vitest run"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@resvg/resvg-js": "^2.6.2",
    "floorplan-3d-core": "*",
    "floorplans-language": "*",
    "puppeteer": "^24.0.0",
    "langium": "~4.0.0",
    "three": "^0.170.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/three": "^0.170.0",
    "shx": "~0.4.0",
    "vitest": "^3.1.4"
  },
  "volta": {
    "node": "20.19.2",
    "npm": "10.8.2"
  }
}
