{
  "name": "floorplan-3d-core",
  "version": "0.5.0",
  "description": "Shared 3D rendering primitives for floorplan visualization",
  "license": "MIT",
  "author": "Malar Kannan",
  "type": "module",
  "main": "./out/index.js",
  "types": "./out/index.d.ts",
  "exports": {
    ".": {
      "types": "./out/index.d.ts",
      "import": "./out/index.js",
      "default": "./out/index.js"
    },
    "./browser": {
      "default": "./out/floorplan-3d-core.browser.js"
    }
  },
  "files": [
    "out"
  ],
  "scripts": {
    "build": "tsc && npm run build:browser",
    "build:tsc": "tsc",
    "build:browser": "node scripts/build-browser.js",
    "clean": "shx rm -rf out",
    "watch": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "floorplan-common": "^0.1.0"
  },
  "peerDependencies": {
    "three": ">=0.150.0",
    "three-bvh-csg": ">=0.0.16"
  },
  "peerDependenciesMeta": {
    "three-bvh-csg": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/three": "^0.170.0",
    "esbuild": "^0.24.0",
    "shx": "~0.4.0",
    "three": "^0.170.0",
    "typescript": "~5.8.3",
    "vitest": "^3.0.0"
  },
  "keywords": [
    "3d",
    "floorplan",
    "three.js",
    "visualization"
  ]
}
