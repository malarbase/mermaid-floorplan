{
  "name": "floorplans-workspace",
  "description": "Base workspace package",
  "version": "0.5.0",
  "type": "module",
  "private": true,
  "scripts": {
    "clean": "npm run clean --workspaces",
    "dev": "npm run --workspace floorplans-viewer dev",
    "build": "npm run langium:generate && npm run build --workspaces",
    "build:all": "npm run langium:generate && npm run build --workspaces",
    "langium:generate": "npm run --workspace language langium:generate",
    "langium:watch": "npm run --workspace language langium:watch",
    "test": "npm run --workspace language test && npm run --workspace mcp-server test"
  },
  "devDependencies": {
    "langium": "^4.0.0",
    "langium-cli": "^4.1.0",
    "shx": "~0.4.0",
    "typescript": "~5.8.3",
    "vite": "^6.3.5"
  },
  "volta": {
    "node": "20.19.2",
    "npm": "10.8.2"
  },
  "workspaces": [
    "language",
    "floorplan-3d-core",
    "mcp-server",
    "viewer"
  ],
  "dependencies": {
    "@speclife/cli": "^0.6.1"
  }
}
