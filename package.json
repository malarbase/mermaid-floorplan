{
  "name": "floorplans-workspace",
  "description": "Base workspace package",
  "version": "0.10.1",
  "type": "module",
  "private": true,
  "scripts": {
    "clean": "npm run clean --workspaces",
    "dev": "npm run --workspace floorplan-viewer dev",
    "build": "echo | npm run langium:generate && npm run build --workspaces",
    "build:all": "echo | npm run langium:generate && npm run build --workspaces",
    "langium:generate": "npm run --workspace floorplan-language langium:generate",
    "langium:watch": "npm run --workspace floorplan-language langium:watch",
    "test": "npm run --workspace floorplan-language test && npm run --workspace floorplan-mcp-server test"
  },
  "devDependencies": {
    "langium": "^4.0.0",
    "langium-cli": "^4.1.0",
    "shx": "~0.4.0",
    "typescript": "~5.8.3",
    "vite": "^6.3.5"
  },
  "volta": {
    "node": "20.19.2",
    "npm": "10.8.2"
  },
  "workspaces": [
    "floorplan-common",
    "floorplan-language",
    "floorplan-3d-core",
    "floorplan-viewer-core",
    "floorplan-mcp-server",
    "floorplan-viewer",
    "floorplan-editor"
  ],
  "dependencies": {
    "@speclife/cli": "^0.6.1"
  }
}
